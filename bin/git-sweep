#!/bin/bash


MAIN_BRANCH="master"
if [ "$1" ]; then
  MAIN_BRANCH=$1
fi

git checkout $MAIN_BRANCH
git fetch
git remote prune origin
git branch --merged $MAIN_BRANCH | grep -v "$MAIN_BRANCH$" | xargs git branch -d

BRANCH_LIST_COMMAND="git branch -r --merged $MAIN_BRANCH | sed 's/ *origin\///' | grep -v 'master$' | grep -v 'production$' | grep -v 'develop$'"
REMOVABLE="`eval ${BRANCH_LIST_COMMAND}`"

if [[ "$REMOVABLE" ]]; then
  echo "The following remote branches are fully merged and will be removed:"
  for branch in $REMOVABLE; do
    echo $branch
  done

  read -p "Continue (y/n)? " -n 1 -r
  echo
  if [[ $REPLY =~ ^[Yy]$ ]]; then
    echo $REMOVABLE | xargs git push origin --delete
  fi
fi

BRANCHES=`git branch | grep -v 'master$' | grep -v 'production$' | grep -v 'develop$'`
echo "The following branches are still on your system, let's go over them:"

echo $BRANCHES

read -p "Do you wish to remove *all* of them, except master, develop and production (y/n)?" -n 1 -r
echo

if [[ $REPLY =~ ^[Yy]$ ]]; then
  for branch in $BRANCHES; do
    git branch -D $branch;
  done
else
  for branch in $BRANCHES; do
    read -p "Do you wish to remove '$branch' (y/n)?" -n 1 -r
    case $REPLY in
      [Yy]* ) git branch -D $branch; continue;;
      [Nn]* ) printf "\n"; continue;;
      * ) echo "Please answer yes or no.";;
    esac
  done
fi
